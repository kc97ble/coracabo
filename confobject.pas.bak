unit ConfObject;

{$mode objfpc}{$H+}

interface

uses
  Classes, SysUtils;

type

  { TConf }

  TConf = class
    function GetCompileFmt: String;
    function CreateTempDir: String;
  end;

var
  Conf: TConf;

implementation

{ TConf }

function TConf.GetCompileFmt: String;
begin
  Result := 'g++ "%s" -o "%s"';
end;

function TConf.CreateTempDir: String;
begin
  Result := GetTempFileName('', '');
  CreateDir(Result);
end;

initialization
  Conf := TConf.Create;

finalization
  Conf.Free;

end.

